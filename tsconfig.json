{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"sourceMap": true,
		"lib": [ "ES2020" ],
		"types": [
			"node",
			"jest"
		],
		"noEmit": true,
		"target": "ES2020",
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"pretty": true,
		"strict": true,
		"alwaysStrict": true,
	},
	"include": [
		"lib",
		"test"
	]
}
